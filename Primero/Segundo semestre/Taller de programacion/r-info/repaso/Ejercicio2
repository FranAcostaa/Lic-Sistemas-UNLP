programa ejercicio2
procesos
  proceso juntarF(ES f:numero)
  comenzar
    mientras(HayFlorEnLaEsquina)
      tomarFlor
      f:= f + 1
  fin
  proceso juntarP
  comenzar
    mientras(HayPapelEnLaEsquina)
      tomarPapel
  fin
  proceso juntar(ES f:numero)
  comenzar
    juntarF(f)
    juntarP
  fin
  proceso dejar(ES f:numero)
  comenzar
    repetir f
      depositarFlor
    f:= 0
  fin
  proceso llevar(ES f:numero)
  variables
    av,ca:numero
  comenzar
    av:= PosAv
    ca:= PosCa
    BloquearEsquina(50,50)
    Pos(50,50)
    dejar(f)
    Pos(av,ca)
    LiberarEsquina(50,50)
  fin
  proceso enviar(E id:numero)
  comenzar
    si(id=1)
      EnviarMensaje(0,r2)
      EnviarMensaje(0,r3)
    sino
      si(id=2)
        EnviarMensaje(0,r1)
        EnviarMensaje(0,r3)
      sino
        EnviarMensaje(0,r1)
        EnviarMensaje(0,r2)
  fin
  proceso recibir
  variables
    nada:numero
  comenzar
    repetir 2
      RecibirMensaje(nada,*)
  fin
areas
  arj:  AreaP(1,4,1,4)
  ar1:  AreaP(1,1,100,1)
  ar2:  AreaP(1,2,100,2)
  ar3:  AreaP(1,3,100,3)
  at:  AreaC(50,50,50,50)
robots
  robot recolector
  variables
    f,id:numero
  comenzar
    derecha
    f:= 0
    juntar(f)
    repetir 9
      mover
      juntar(f)
    llevar(f)
    RecibirMensaje(id,rj) {lo inicio ac√° porque es cuando se lo necesita}
    enviar(id)
    recibir 
    repetir 9
      repetir 10
        mover
        juntar(f)
      llevar(f)   
      enviar(id)
      recibir
    EnviarMensaje(0,rj)  
  fin
  robot jefe
  variables
    nada,f:numero
  comenzar
    f:= 0
    EnviarMensaje(1,r1)
    EnviarMensaje(2,r2)
    EnviarMensaje(3,r3)
    repetir 3 
      RecibirMensaje(nada,*)
    Pos(50,50)
    juntarF(f)
    Informar(f)
  fin
variables
  rj:jefe
  r1:recolector
  r2:recolector
  r3:recolector
comenzar
  AsignarArea(rj,arj)
  AsignarArea(r1,ar1)
  AsignarArea(r2,ar2)
  AsignarArea(r3,ar3)
  AsignarArea(rj,at)
  AsignarArea(r1,at)
  AsignarArea(r2,at)
  AsignarArea(r3,at)
  Iniciar(rj,1,4)
  Iniciar(r1,1,1)
  Iniciar(r2,1,2)
  Iniciar(r3,1,3)
fin