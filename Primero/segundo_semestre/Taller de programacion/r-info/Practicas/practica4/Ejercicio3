programa Ejercicio3
procesos
  proceso juntarP
  comenzar
    mientras(HayPapelEnLaEsquina)
      tomarPapel
  fin
areas
  ciudad:AreaC(1,1,100,100)
robots
  robot recolector
  variables
    id,id2,nada:numero
  comenzar
    RecibirMensaje(id,rj)
    mientras(PosCa<96)    
      si(PosCa=1)
        juntarP
        repetir 4
          mover
          juntarP
      sino
        repetir 5
          mover
          juntarP
      si(id=1)
        EnviarMensaje(id,r2)
        EnviarMensaje(id,r3)
        RecibirMensaje(id2,*)
        {si ya mandÃ³ el 2, que mande el 3}
        si(id2=2)
          RecibirMensaje(id2,r3)
        sino
          RecibirMensaje(id2,r2)
      sino
        si(id=2)
          EnviarMensaje(id,r1)
          EnviarMensaje(id,r3)
          RecibirMensaje(id2,*)
          si(id2=1)
            RecibirMensaje(id2,r3)
          sino
            RecibirMensaje(id2,r1)
        sino
          EnviarMensaje(id,r1)
          EnviarMensaje(id,r2)
          RecibirMensaje(id2,*)
          si(id2=1)
            RecibirMensaje(id2,r2)
          sino
            RecibirMensaje(id2,r1)
  fin
  robot jefe
  comenzar
    EnviarMensaje(1,r1)
    EnviarMensaje(2,r2)
    EnviarMensaje(3,r3)
  fin
variables
  rj:jefe
  r1:recolector
  r2:recolector
  r3:recolector
comenzar
  AsignarArea(rj,ciudad)
  AsignarArea(r1,ciudad)
  AsignarArea(r2,ciudad)
  AsignarArea(r3,ciudad)
  Iniciar(rj,4,1)
  Iniciar(r1,1,1)
  Iniciar(r2,2,1)
  Iniciar(r3,3,1)
fin