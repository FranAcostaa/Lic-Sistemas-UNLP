package ejercicio7;

import java.util.*;

public class CalcularSuma {
	
	public static int Sumador(List<Integer> lista, int x) {
		if(!lista.isEmpty()) {
			x += lista.get(0);
			lista.remove(0);
			Sumador(lista,x);
		}
		return x;
	}
	
	
	
	public static void main(String[] args) {
		List<Integer> lista = new LinkedList<Integer>();
		
		for(int i=1;i<=10;i++) {lista.add(i);}
		
		for(int e:lista) {
			System.out.println(e);
		}
		int x = 0;
		System.out.println(Sumador(lista,x));
	}
}
