package ejercicio7;

import java.util.*;

public abstract class Sucesion {
	public List<Integer> lista = new ArrayList();
	

	public List<Integer> ObtenerSucesion(int n){
		
		if (n % 2 == 0) {
			n = n /2;
			this.lista.add(n);
			ObtenerSucesion(n);
		}
		else if ((n % 2 != 0)&&(n != 1)){
			n = n*3 + 1;
			this.lista.add(n);
			ObtenerSucesion(n);
		}
		
		return this.lista;
	}
}