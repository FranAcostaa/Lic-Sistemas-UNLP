import java.util.ArrayList;
import java.util.List;

public class InvertirLista {
    public List<Integer> Invertir(List<Integer> lista2, int dimf) {
        List<Integer> lista = new ArrayList<>(); // Reiniciar lista en cada llamada
        invertirRecursivo(lista2, lista, dimf);
        return lista;
    }

    private void invertirRecursivo(List<Integer> listaOriginal, List<Integer> listaInvertida, int dimf) {
        if (dimf >= 0) {
            listaInvertida.add(listaOriginal.get(dimf));
            invertirRecursivo(listaOriginal, listaInvertida, dimf - 1);
        }
    }

    public static void main(String[] args) {
        List<Integer> lista2 = new ArrayList<>();
        lista2.add(1); lista2.add(2); lista2.add(3); lista2.add(4);
        System.out.println("Lista original:");
        for (int x : lista2) {
            System.out.println(x);
        }

        InvertirLista invertir = new InvertirLista();
        List<Integer> listaInvertida = invertir.Invertir(lista2, lista2.size() - 1);

        System.out.println("Lista invertida:");
        for (int x : listaInvertida) {
            System.out.println(x);
        }
    }
}
