package ejercicio7;

import java.util.*;

public class CalcularSuma {
	
	public static int Sumador(List<Integer> lista, int indice) {
		if(indice < lista.size()) {
			return Sumador(lista,indice) + lista.get(indice);
		}
		return 0;
	}
	
	
	
	public static void main(String[] args) {
		List<Integer> lista = new LinkedList<Integer>();
		
		for(int i=1;i<=10;i++) {lista.add(i);}
		
		System.out.println(Sumador(lista,lista.size()-1));
	}
}
